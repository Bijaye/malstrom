<script src="tagCanvas.js" type="text/javascript"></script>

<h2>Threat Tags</h2>

<script type="text/javascript">
    window.onload = function() {
        try {
            TagCanvas.Start('myCanvas');
        } catch(e) {
            // something went wrong, hide the canvas container
            document.getElementById('myCanvasContainer').style.display = 'none';
        }
    };
</script>

<div id="myCanvasContainer">
  <canvas width="1000" height="600" id="myCanvas">
    <p>Anything in here will be replaced on browsers that support the canvas element</p>
      <% tag_cloud( Element.tag_counts_on(:tags), %w(css1 css2 css3 css4)) do |tag, css_class| %>
        <%= link_to tag, threats_profile_path(:tag => tag), :class => css_class %>
      <% end %>

      <% tag_cloud( Sample.tag_counts_on(:tags), %w(css1 css2 css3 css4)) do |tag, css_class| %>
          <%= link_to tag, threats_profile_path(:tag => tag), :class => css_class %>
      <% end %>
  </canvas>
</div>

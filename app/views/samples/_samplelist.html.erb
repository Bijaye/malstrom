<style type="text/css"> .centerDiv { width: 17%; height:100px; margin: 0 auto;  text-align: center;} </style>

<div class="tab-pane active">
   <div class="container-fluid">
     <div class="panel panel-default">
       <div class="panel-heading">
        <table id="sample_table" class="display table">
          <% @all_malz = Sample.all %>
            <thead>
                <tr>
                  <th>Filename</th>
                  <th>MD5</th>
                  <th>MIME</th>
                  <th>Detected</th>
                  <th>Remove</th>
                  <th>Tags</th>
                </tr>
            </thead>
            <tbody>
            <% @all_malz.each do |mal| %>
                <td><%= link_to '', samples_download_malz_path(:sample => mal.malz_file_name), :class => 'glyphicon glyphicon-download' %> <%= mal.malz_file_name %></td>
                <td><%= link_to mal.md5sum, samples_analysis_path(:md5sum => mal.md5sum) %></td>
                <td><%= mal.malz_content_type %></td>
                <% if mal.detection == 'N/A' %>
                    <td><%= mal.detection %></td>
                <% else %>
                    <td><%= link_to mal.detection, "http://virustotal.com/en/file/#{mal.sha256}/analysis", :target => "_blank" %></td>
                <% end %>
                <td><%= link_to '', samples_delete_sample_path(:sample_id => mal.id), class: 'glyphicon glyphicon-trash btn btn-danger' %></td>
                <% mal.tag_list.each do |tag| %>
                    <td><%= link_to tag, threats_profile_path(:tag => tag), :class => 'label label-large label-info' %></td>
                    <% end %>
            </tbody>
            <% end %>
        </table>
       </div>
     </div>
   </div>
</div>
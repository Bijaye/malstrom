<style type="text/css"> .centerDiv { width: 17%; height:100px; margin: 0 auto;  text-align: center;} </style>

<div class="tab-pane active">

   <div>
     <div class="container">
       <%= form_tag("/search", method: "get") do %>
           <%= label_tag(:q, "") %>
           <%= text_field_tag(:q) %>
           <%= submit_tag("Search", class: "btn btn-info") %>
       <% end %>
     </div>
     <% @all_malz = Sample.all %>
     <div class="container">
       <!-- Default panel contents -->
       <div class="panel-heading"></div>
     </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Filename</th>
                    <th>SHA256</th>
                    <th>Type</th>
                    <th>Size</th>
                </tr>
            </thead>
            <tbody>
            <% @all_malz.each do |mal| %>
                <td><%= mal.malz_file_name %></td>
                <td><%= mal.SHA256 %></td>
                <td><%= mal.malz_content_type %></td>
                <td><%= mal.malz_file_size %></td>
            </tbody>
            <% end %>
        </table>
       <nav>
         <ul class="pagination">
           <li class="disabled"><a href="#">&laquo;</a></li>
           <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
           <li><a href="#">2<span></span></a></li>
           <li><a href="#">3<span></span></a></li>
         </ul>
       </nav>
   </div>
</div>